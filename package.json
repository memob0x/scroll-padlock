{
  "name": "scroll-padlock",
  "type": "module",
  "author": {
    "name": "memob0x",
    "email": "dfioroni91@gmail.com",
    "url": "https://github.com/memob0x"
  },
  "description": "Locks elements scroll handling scrollbar gaps and iOS Safari with CSS variables",
  "main": "dist/umd/scroll-padlock.min.js",
  "module": "dist/es/scroll-padlock.js",
  "version": "2.2.0",
  "license": "MIT",
  "repository": "https://github.com/memob0x/scroll-padlock.git",
  "keywords": [
    "scroll",
    "lock",
    "body",
    "document",
    "prevent",
    "freeze",
    "disable",
    "lightbox",
    "modal",
    "overlay",
    "ios",
    "safari",
    "apple",
    "iphone",
    "ipad",
    "ipod",
    "css",
    "css-variables",
    "scrollbar",
    "scrollbars",
    "scrollbar-width",
    "gap",
    "compensation",
    "desktop",
    "tablet"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/eslint --ext .js . --fix",
    "build": "node --experimental-specifier-resolution=node ./build.js",
    "test:unit": "./node_modules/.bin/mocha --experimental-specifier-resolution=node ./test/unit/*.spec.js",
    "test:e2e": "npm run build && ./node_modules/.bin/mocha --experimental-specifier-resolution=node ./test/e2e/*.spec.js",
    "test": "npm run test:unit && npm run test:e2e",
    "docs": "./node_modules/.bin/documentation build src/**/*.js -f md -o documentation.md",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "^7.18.6",
    "@babel/eslint-parser": "^7.18.2",
    "@babel/eslint-plugin": "^7.17.7",
    "@babel/preset-env": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "chai": "^4.3.6",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.3",
    "husky": "^8.0.1",
    "jsdom": "^20.0.0",
    "mocha": "^10.0.0",
    "puppeteer": "^15.3.2",
    "resemblejs": "^4.1.0",
    "rollup": "^2.76.0",
    "rollup-plugin-gzip": "^3.0.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "devDependencies": {
    "documentation": "^13.2.5"
  }
}
