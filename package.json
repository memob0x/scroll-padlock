{
  "name": "scroll-padlock",
  "type": "module",
  "author": {
    "name": "memob0x",
    "url": "https://github.com/memob0x"
  },
  "description": "Locks elements scroll handling scrollbar gaps and iOS Safari with CSS variables",
  "main": "./dist/scroll-padlock.umd.js",
  "module": "./dist/scroll-padlock.js",
  "types": "./dist/scroll-padlock.d.ts",
  "version": "3.0.1",
  "license": "MIT",
  "repository": "https://github.com/memob0x/scroll-padlock.git",
  "keywords": [
    "scroll",
    "lock",
    "body",
    "document",
    "prevent",
    "freeze",
    "disable",
    "lightbox",
    "modal",
    "overlay",
    "ios",
    "safari",
    "apple",
    "iphone",
    "ipad",
    "ipod",
    "css",
    "css-variables",
    "scrollbar",
    "scrollbars",
    "scrollbar-width",
    "gap",
    "compensation",
    "desktop",
    "tablet"
  ],
  "scripts": {
    "lint": "npx eslint .",
    "build": "rollup -c && api-extractor run --local",
    "test:unit": "node --import tsx --test --experimental-test-coverage --test-coverage-include='./src/**/!(*.spec).ts' --test-reporter=spec --test-reporter=lcov --test-reporter=./reporter.js --test-reporter-destination=stdout --test-reporter-destination=./lcov.info --test-reporter-destination=stdout ./src/**/*.spec.ts",
    "test:e2e": "node --import tsx --test ./e2e/*.spec.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.52.8",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^24.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.3.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.4",
    "jsdom": "^26.1.0",
    "puppeteer": "^24.12.1",
    "resemblejs": "^5.0.0",
    "rollup": "^4.44.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-gzip": "^4.1.1",
    "sharp": "^0.34.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0"
  }
}
