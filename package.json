{
  "name": "scroll-padlock",
  "type": "module",
  "author": {
    "name": "memob0x",
    "email": "dfioroni91@gmail.com",
    "url": "https://github.com/memob0x"
  },
  "description": "Locks elements scroll handling scrollbar gaps and iOS Safari with CSS variables",
  "main": "dist/umd/scroll-padlock.min.js",
  "module": "dist/es/scroll-padlock.js",
  "version": "2.4.1",
  "license": "MIT",
  "repository": "https://github.com/memob0x/scroll-padlock.git",
  "keywords": [
    "scroll",
    "lock",
    "body",
    "document",
    "prevent",
    "freeze",
    "disable",
    "lightbox",
    "modal",
    "overlay",
    "ios",
    "safari",
    "apple",
    "iphone",
    "ipad",
    "ipod",
    "css",
    "css-variables",
    "scrollbar",
    "scrollbars",
    "scrollbar-width",
    "gap",
    "compensation",
    "desktop",
    "tablet"
  ],
  "scripts": {
    "lint": "./node_modules/.bin/eslint --ext .js . --fix",
    "build": "node --experimental-specifier-resolution=node ./build.js",
    "test:unit": "./node_modules/.bin/mocha --experimental-specifier-resolution=node ./test/unit/*.spec.js",
    "test:coverage": "./node_modules/.bin/c8 -r html npm run test:unit",
    "test:coverage:check": "./node_modules/.bin/c8 check-coverage --100 npm run test:unit",
    "test:e2e": "npm run build && ./node_modules/.bin/mocha --experimental-specifier-resolution=node ./test/e2e/*.spec.js",
    "test": "npm run test:coverage && npm run test:coverage:check && npm run test:e2e",
    "docs": "node --experimental-specifier-resolution=node ./build-docs.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@babel/core": "^7.21.3",
    "@babel/eslint-parser": "^7.21.3",
    "@babel/eslint-plugin": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-babel": "^6.0.3",
    "@rollup/plugin-terser": "^0.4.0",
    "chai": "^4.3.7",
    "eslint": "^8.36.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^40.1.0",
    "husky": "^8.0.3",
    "jsdoc": "^4.0.2",
    "jsdoc-to-markdown": "^8.0.0",
    "jsdom": "^21.1.1",
    "mocha": "^10.2.0",
    "puppeteer": "^19.8.0",
    "resemblejs": "^4.1.0",
    "rollup": "^3.20.2",
    "rollup-plugin-gzip": "^3.1.0",
    "sinon": "^15.0.3",
    "c8": "^7.13.0"
  }
}