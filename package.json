{
  "name": "scroll-padlock",
  "type": "module",
  "author": {
    "name": "memob0x",
    "url": "https://github.com/memob0x"
  },
  "description": "Locks elements scroll handling scrollbar gaps and iOS Safari with CSS variables",
  "main": "./dist/scroll-padlock.umd.js",
  "module": "./dist/scroll-padlock.js",
  "types": "./dist/scroll-padlock.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE.txt"
  ],
  "version": "3.0.1",
  "license": "MIT",
  "repository": "https://github.com/memob0x/scroll-padlock.git",
  "keywords": [
    "scroll-lock",
    "page-scroll",
    "scrollbar-width",
    "css-variables"
  ],
  "scripts": {
    "lint": "npx eslint .",
    "build": "rollup -c && api-extractor run --local",
    "test:unit": "c8 node --import tsx --test ./src/**/*.spec.ts",
    "test:e2e": "node --import tsx --test ./e2e/**/*.spec.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "prepare": "husky"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.55.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "c8": "^10.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^62.3.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jsdoc": "^4.0.5",
    "jsdom": "^27.4.0",
    "pixelmatch": "^7.1.0",
    "puppeteer": "^24.35.0",
    "rollup": "^4.55.3",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-gzip": "^4.1.1",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  }
}