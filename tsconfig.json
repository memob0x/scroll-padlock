{
  "compilerOptions": {
    "module": "ESNext",
    "lib": [
      "ESNext",
      "dom"
    ],
    "target": "ESNext",
    "moduleResolution": "Node",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "dist/dts"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./src/**/*.spec.ts",
    "coverage",
    "node_modules",
    "dist"
  ]
}
