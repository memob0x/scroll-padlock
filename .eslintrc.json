{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base"
  ],
  "plugins": [
    "jsdoc"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {},
  "overrides": [{
      "files": [
        "./*.js"
      ],
      "env": {
        "node": true
      },
      "settings": {
        "import/resolver": {
          "node": {},
        },
      }
    },
    {
      "files": [
        "*.spec.js"
      ],
      "env": {
        "mocha": true
      },
      "rules": {
        "no-unused-expressions": "off"
      }
    }
  ]
}
